{
    "name": "C++ container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools"
	],

	"runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],

	"remoteUser": "ashwin.docker",

	"features": {
		"git": "latest",
		"git-lfs": "latest",
		"python": "3.9"
	}
}
